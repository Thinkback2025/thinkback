<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">knets.replit.app</domain>
        <domain includeSubdomains="true">replit.app</domain>
        <domain includeSubdomains="true">replit.dev</domain>
        <domain includeSubdomains="true">replit.co</domain>
    </domain-config>
    
    <!-- Allow all cleartext traffic for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>